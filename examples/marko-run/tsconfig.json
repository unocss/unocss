{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
